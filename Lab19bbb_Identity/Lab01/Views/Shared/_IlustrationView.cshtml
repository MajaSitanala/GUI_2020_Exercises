<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IlustrationView</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>

    <div id="wrapper">
        <header>
            <h1><img src="/Graphics/DDD.png" alt="The Day Dream Division" height="140" width="800" /></h1>
        </header>

        <navI>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Index</a>&nbsp;&nbsp;</li>
                <li><a asp-controller="Home" asp-action="Fractions">Fractions</a>&nbsp;&nbsp;</li>
                <li><a asp-controller="Illustrations" asp-action="Index">Ilustrations</a>&nbsp;&nbsp;</li>
                <li><a asp-controller="Home" asp-action="Comics">Comics</a>&nbsp;&nbsp;</li>
                <li><a asp-controller="Home" asp-action="Music">Music</a>&nbsp;&nbsp;</li>
                <li><a asp-controller="Home" asp-action="Videos">Videos</a>&nbsp;&nbsp;</li>
                <li><a asp-controller="Join" asp-action="Create">Join</a>&nbsp;&nbsp;</li>
                <li><a asp-controller="Join" asp-action="Index">Admin</a>&nbsp;&nbsp;</li>
            </ul>
        </navI>

        <div id="wrapperI">
            <mainI id="content">
                @RenderBody()
            </mainI>

            <footer>
                <small>
                    <i>
                        Copyright &copy; 2020 The Day Dream Division<br>
                        <a href="mailto:DDD@atentionSpanMail.com">DDD@atentionSpanMail.com</a>
                    </i>
                </small>
            </footer>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
